<div class="hover-transition">
  <div class="position-relative">
    <%= image_tag user.user_avatar, class: 'size-19rem grayscale' %>
    <% if user.user_summary&.verified_at.present? %>
      <i class="bi bi-award gredient-text fs-1 position-absolute right-1rem"></i>
    <% end %>
  </div>
  <div class="position-relative bg-white mx-auto text-center p-3 float-div">
    <div class="fw-bold"><%= user.name%></div>
    <% unless user.user_summary&.fresh_law_graduate? %>
      <div class="fw-light fs-14px"><%= user.user_summary.lawyer_type.titleize %></div>
    <% end %>
    <div><%= link_to 'Contact Now', user, class: 'gredient-text fs-14px' %></div>
  </div>
</div>