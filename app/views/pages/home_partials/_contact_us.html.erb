<div class="px-10vw">
  <div class="shadow p-5">
    <div class="fw-light fs-14px mb-1">Contact us</div>
    <div class='gredient-line mb-4'><span></span></div>
    <div class="row mb-4">
      <div class="col-md h2 fw-bolder">
        Feel free to ask any question to <span class="gredient-text">us</span>
      </div>
      <div class="col-md">
        <div class="d-flex">
          <div><i class="bi bi-geo-alt gredient-text me-3 fs-2"></i></div>
          <div class="align-self-center">Punjab bar concil, Lahore, Pakistan</div>
        </div>
      </div>
      <div class="col-md">
        <div class="d-flex">
          <div><i class="bi bi-telephone-forward gredient-text me-3 fs-3"></i></div>
          <div class="align-self-center">+92 306-1656352</div>
        </div>
        <div class="d-flex">
          <div><i class="bi bi-envelope gredient-text me-3 fs-3"></i></div>
          <div class="align-self-center">example@gmail.com</div>
        </div>
      </div>
    </div>

    <%= form_with url: root_path, method: :post do |form| %>
      <div class="row">
        <div class="col-md">
          <div class="field">
            <%= form.text_field :name, placeholder: 'Full Name...', class: 'form-control mb-4 rounded-0', required: true %>
          </div>
        </div>
        <div class="col-md">
          <div class="field">
            <%= form.telephone_field :mobile_number, placeholder: 'Mobile No...', class: 'form-control rounded-0 mb-4', required: true %>
          </div>
        </div>
        <div class="col-md">
          <div class="field">
            <%= form.email_field :email, placeholder: 'Email address...', class: 'form-control rounded-0 mb-4', required: true %>
          </div>
        </div>
      </div>
      <div class="field">
        <%= form.text_area(:feedback, rows: '5', class: "form-control mb-4 rounded-0", required: true, autofocus: true, placeholder: "Message...") %>
      </div>
      <div class="field">
        <%= form.submit 'Send Your Message', class: "btn btn-gold text-white rounded-0  w-100" %>
      </div>
    <% end %>
  </div>
</div>