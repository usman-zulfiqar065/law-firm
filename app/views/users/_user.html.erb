<div class="mb-5 pb-5 border-b-gredient">
  <div class="d-flex mb-3">
    <div><%= image_tag user.user_avatar, class: 'rounded-circle s-10rem' %></div>
    <div class="align-self-center ms-3">
      <div>
        <span class="fw-bold fs-2"><%= user.name %></span>
        <% if user.verified_at.present? %><span class="badge btn-gold ms-3 align-self-center"><i class="bi bi-patch-check"></i> Verified Lawyer</span> <% end %>
      </div>
      <div>
        <% user.services.each do |service| %>
          <span class="fs-14px"> <%= service.name %> Law <span>|</span> </span>
        <% end %>
      </div>
      <div class="fs-14px">
        <span> <%= user.qualification %></span> | <span><%= user.experience %> year of experience</span>
      </div>
    </div>
  </div>
  <div>
    <%= link_to 'View Profile', user, class: 'btn-outline-secondary btn w-100' %>
  </div>
</div>