<div class="page-title md-hide">
  <div class="text-white fw-bold h1">Sign in to your existing account</div>
  <div class="fw-semibold mt-4">
    <span class="me-2 text-white"><%= link_to 'Home', root_path, class: 'text-decoration-none text-white' %> > </span>
    <span class="gredient-text">Sign in </span>
  </div>
</div>

<div class="p-2 p-lg-5 mt-5 mt-lg-0" >
  <%= link_to '<i class="bi bi-arrow-return-left"></i> Back'.html_safe, :back, class: "gredient-text mb-3 rounded-0" %>
  <div class="register h-100 d-flex flex-column align-items-center justify-content-center p-4 max-form-width m-auto" >
    <h2 class="fw-bolder">Sign in</h2>
    <p class="text-muted">Or <%= link_to "Sign up for a new account", new_registration_path(resource_name), class: 'gredient-text text-decoration-none'%></p>  
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: 'form-label text-muted' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: 'form-control mb-3 rounded-0' %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'form-label text-muted' %><br />
        <%= f.password_field :password, autocomplete: "current-password", required: true, class: 'form-control mb-3 rounded-0' %>
      </div>

      <div class="d-md-flex justify-content-between"> 
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me, checked: true, class: "form-check-input" %>
            <%= f.label :remember_me, class: 'form-label text-muted' %>
          </div>
        <% end %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "link-dark" %>
      </div>

      <div class="actions my-2 text-center">
        <%= f.submit "Sign in", class: 'btn btn-gold rounded-0 text-white w-100' %>
      </div>
    <% end %>
  </div>
</div>
