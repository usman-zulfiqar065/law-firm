<div class="nested-form-wrapper" data-new-record="<%= f.object.new_record? %>">
  <div class="row position-relative mt-3">
    <div class="col-md field">
      <%= f.label :service, class: 'form-label text-muted' %><br />
      <%= f.select :service_id, Service.all.pluck(:name, :id), {}, class: "form-select rounded-0" %>
    </div>
    <div class="col-md field">
      <%= f.label :service_proficiency, class: 'form-label text-muted' %><br />
      <div class="d-flex">
        <%= f.select :service_proficiency, humanize_keys(UserService::LEVELS), {}, class: 'form-select rounded-0' %>
      </div>
    </div>
    <div class="text-end rounded-start-0 position-absolute"><button type="button" data-action="nested-form#remove", class='btn btn-close'></button></div>
  </div>

  <%= f.hidden_field :_destroy %>
</div>
